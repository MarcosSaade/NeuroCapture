# NeuroCapture Backend Environment Configuration

# Database Configuration
# PostgreSQL connection string for async operations
DATABASE_URL=postgresql+asyncpg://neuro:capture@localhost:5432/neurocapture

# Application Settings
DEBUG=true
LOG_LEVEL=DEBUG
ENVIRONMENT=development

# File Storage
UPLOAD_DIRECTORY=uploads
MAX_UPLOAD_SIZE_MB=100

# CORS Settings (for frontend communication)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Audio Processing Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_VAD_AGGRESSIVENESS=2
AUDIO_PROCESSING_TIMEOUT=300

# Development Settings
RELOAD_ON_CHANGE=true
SHOW_SQL_QUERIES=true

# Security (Production)
# SECRET_KEY=your-secret-key-here
# ALLOWED_HOSTS=your-domain.com

# Optional: External Services
# REDIS_URL=redis://localhost:6379/0
# SENTRY_DSN=your-sentry-dsn-here
